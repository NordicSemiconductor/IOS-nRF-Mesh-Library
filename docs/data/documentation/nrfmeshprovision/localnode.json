/nRFMeshProvision/Exporting":{"role":"article","title":"Exporting network configuration","abstract":[{"type":"text","text":"Export and import feature allows to share mesh network configuration between"},{"type":"text","text":" "},{"type":"text","text":"devices."}],"identifier":"doc:\/\/nRFMeshProvision\/documentation\/nRFMeshProvision\/Exporting","kind":"article","type":"topic","url":"\/documentation\/nrfmeshprovision\/exporting"}}}