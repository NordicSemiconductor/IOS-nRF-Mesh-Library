ions of segments"},{"type":"text","text":" "},{"type":"text","text":"of segmented messages to a Unicast destination without progress"},{"type":"text","text":" "},{"type":"text","text":"(i.e., without newly marking any segment as acknowledged)."}],"identifier":"doc:\/\/NordicMesh\/documentation\/NordicMesh\/SarTransmitterSet\/sarUnicastRetransmissionsWithoutProgressCount","fragments":[{"kind":"keyword","text":"let"},{"kind":"text","text":" "},{"kind":"identifier","text":"sarUnicastRetransmissionsWithoutProgressCount"},{"kind":"text","text":": "},{"preciseIdentifier":"s:s5UInt8V","kind":"typeIdentifier","text":"UInt8"}],"type":"topic","title":"sarUnicastRetransmissionsWithoutProgressCount","kind":"symbol","role":"symbol","url":"\/documentation\/nordicmesh\/sartransmitterset\/sarunicastretransmissionswithoutprogresscount"},"doc://NordicMesh/documentation/NordicMesh/SarTransmitterSet":{"abstract":[{"type":"text","text":"A "},{"type":"codeVoice","code":"SarTransmitterSet"},{"type":"text","text":" message is an acknowledged message used to set the SAR Transmitter"},{"type":"text","text":" "},{"type":"text","text":"state of a Node."}],"identifier":"doc:\/\/NordicMesh\/documentation\/NordicMesh\/SarTransmitterSet","role":"symbol","url":"\/documentation\/nordicmesh\/sartransmitterset","navigatorTitle":[{"kind":"identifier","text":"SarTransmitterSet"}],"title":"SarTransmitterSet","fragments":[{"kind":"keyword","text":"struct"},{"kind":"text","text":" "},{"kind":"identifier","text":"SarTransmitterSet"}],"type":"topic","kind":"symbol"},"doc://NordicMesh/documentation/NordicMesh":{"abstract":[{"type":"text","text":"Provision, configure and control Bluetooth mesh devices with nRF Mesh library."}],"role":"collection","type":"topic","kind":"symbol","url":"\/documentation\/nordicmesh","identifier":"doc:\/\/NordicMesh\/documentation\/NordicMesh","title":"NordicMesh"}}}